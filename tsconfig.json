{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",

    "target": "es2018",
    "lib": ["esnext"],

    "incremental": true,

    "allowJs": false,

    "sourceMap": true,
    "removeComments": false,
    "declaration": true,
    "esModuleInterop": true,

    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true
  }
}
