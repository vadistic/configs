{
  "name": "@vadistic/stack-react-lib",
  "description": "Personal @vadistic utils - scaffolding & configs for react & node monorepos with typescript",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "license": "MIT",
  "homepage": "https://vadistic.netlify.com",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/vadistic/utils"
  },
  "scripts": {
    "generate": "plop all",
    "format": "prettier --config prettier.config.js --write './**.{js,ts,jsx,tsx,json}*'",
    "lint": "yarn eslint --ext .js --ext .ts --ext .tsx fixtures scripts",
    "prepare": "yarn format  && yarn lint && yarn generate",
    "publish": "yarn lerna publish --registry https://npm.pkg.github.com/vadistic"
  },
  "workspaces": [
    "stacks/*",
    "fixtures/*",
    "configs/*",
    "scripts"
  ],
  "dependencies": {
    "@vadistic/eslint-config-react": "file:configs/eslint-config-react",
    "@vadistic/prettier-config": "file:configs/prettier-config",
    "lerna": "^3.18.1",
    "plop": "^2.5.2",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  }
}
