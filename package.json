{
  "name": "workspace",
  "private": true,
  "description": "Personal @vadistic workspace utils",
  "homepage": "https://vadistic.netlify.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/vadistic/workspace"
  },
  "license": "MIT",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "workspaces": [
    "configs/*",
    "fixtures/*",
    "scripts"
  ],
  "scripts": {
    "build": "lerna run --ignore @vadistic/fixture-monorepo build ",
    "clean": "lerna run --ignore @vadistic/fixture-monorepo clean",
    "format": "lerna run --ignore @vadistic/fixture-monorepo format",
    "lint": "lerna run --ignore @vadistic/fixture-monorepo lint",
    "prepublishOnly": "yarn sync && yarn clean && yarn format && yarn lint && yarn build",
    "sync:dotfiles": "sh scripts/copy-dotfiles.sh",
    "sync:pkg": "lerna exec 'task sync-pkg'",
    "sync": "yarn sync:dotfiles"
  },
  "devDependencies": {
    "eslint": ">=6.8.0",
    "lerna": ">=3.20.2",
    "prettier": ">=1.19.1",
    "ts-node": ">=8.6.2",
    "typescript": ">=3.8.3"
  }
}
